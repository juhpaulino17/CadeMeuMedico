@model IEnumerable<TesteCDMedico.ESTADOS>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Adicionar Novo", "Adicionar")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PAISES.Pais)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PAISES.Pais)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id=item.IDEstados }) |
                @Html.ActionLink("Details", "Details", new { id=item.IDEstados }) |
                @Html.ActionLink("Excluir", "Excluir", new { id=item.IDEstados })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
